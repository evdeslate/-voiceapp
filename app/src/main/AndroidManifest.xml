<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />

    <application
        android:name=".SpeakApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logocircle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logocircle"
        android:supportsRtl="true"
        android:theme="@style/Theme.SPEAK"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        tools:ignore="UnusedAttribute">
        
        <activity
            android:name=".BatchExtractorActivity"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        
        <activity
            android:name=".PassageManagementActivity"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".ProgressReportsActivity"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".StudentManagementActivity"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".StudentDetail"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".TeacherDashboard"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".LoginPage"
            android:exported="false"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="fontScale|uiMode" />
        <activity
            android:name=".WelcomePage"
            android:exported="true"
            android:configChanges="fontScale|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>