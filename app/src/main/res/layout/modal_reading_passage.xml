<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Modal Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modalContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/frame_background"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header Section with Timer -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#4DD0E1"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Passage Title -->
            <TextView
                android:id="@+id/passageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/happy_monkey"
                android:text="The Snail with the Biggest House"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@+id/timerDisplay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Timer Display -->
            <TextView
                android:id="@+id/timerDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ACC1"
                android:fontFamily="@font/happy_monkey"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/closeButton"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Close Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#FF5252"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:fabSize="mini"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#FFFFFF" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Reading Content -->
        <ScrollView
            android:id="@+id/passageScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/controlsSection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerSection">

            <TextView
                android:id="@+id/passageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/happy_monkey"
                android:lineSpacingExtra="10dp"
                android:padding="8dp"
                android:text="Once upon a time, there was a little snail who lived in a beautiful garden..."
                android:textColor="#212121"
                android:textSize="20sp" />

        </ScrollView>

        <!-- Controls Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controlsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Microphone Button -->
            <Button
                android:id="@+id/microphoneButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#4CAF50"
                android:drawableStart="@android:drawable/ic_btn_speak_now"
                android:drawablePadding="12dp"
                android:fontFamily="@font/happy_monkey"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Start Reading"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@+id/showResultsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Show Results Button -->
            <Button
                android:id="@+id/showResultsButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:backgroundTint="#FF9800"
                android:fontFamily="@font/happy_monkey"
                android:text="Results"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/microphoneButton"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Legacy buttons (hidden by default, can be shown for testing) -->
            <Button
                android:id="@+id/startReadingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF5722"
                android:text="Stop Reading"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/listenButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/microphoneButton" />

            <Button
                android:id="@+id/listenButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF5722"
                android:text="ðŸ”Š Test Speech"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/startReadingButton"
                app:layout_constraintTop_toBottomOf="@+id/microphoneButton" />

            <Button
                android:id="@+id/testSimplifiedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#4CAF50"
                android:text="ðŸŽ¤ Test Simplified"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/testBasicButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startReadingButton" />

            <Button
                android:id="@+id/testBasicButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3"
                android:text="ðŸ” Test Basic"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/testSimplifiedButton"
                app:layout_constraintTop_toBottomOf="@+id/startReadingButton" />

            <!-- Progress Section -->
            <LinearLayout
                android:id="@+id/progressSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/microphoneButton">

                <TextView
                    android:id="@+id/progressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/happy_monkey"
                    android:text="Progress:"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/readingProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#E0E0E0" />

                <TextView
                    android:id="@+id/progressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/happy_monkey"
                    android:text="0%"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>